@model Vidly.ViewModels.NewMovieViewModel
@{
    ViewBag.Title = "New";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>New Movie</h2>
@using (Html.BeginForm("Save", "Movies"))
{
    <div class="form-group">
        @Html.LabelFor(m => m.Movie.Name)
        @Html.TextBoxFor(m => m.Movie.Name, new { @class = "form-control" })
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.Movie.ReleaseData)
        @Html.TextBoxFor(m => m.Movie.ReleaseData, "{0:d MMM yyyy}" , new { @class = "form-control" })
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.Movie.Genre_Id)
        @Html.DropDownListFor(m => m.Movie.Genre_Id, new SelectList(Model.Genre, "Id", "Name"), "Select Membrership Type", new { @class = "form-control" })
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.Movie.NumbersInStock)
        @Html.TextBoxFor(m => m.Movie.NumbersInStock, new { @class = "form-control" })
    </div>
    @Html.HiddenFor(m => m.Movie.Id)
    <button class="btn btn-primary">Save</button>

}

